{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PyTest: Remote Attach debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "./app"
                }
            ],
            "justMyCode": true
        }
    ]
}